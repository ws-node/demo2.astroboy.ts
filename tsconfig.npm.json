{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "lib": [
      "es2016",
      "es2015"
    ]
  },
  "exclude": [
    "./package",
    "./node_modules",
    "./dist"
  ]
}